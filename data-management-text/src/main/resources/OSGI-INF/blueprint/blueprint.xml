<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="textDataManager" class="org.codice.data.management.impl.TextFileDataManager" init-method="init">
        <argument value="etc/dataStore.txt" />
    </bean>

    <service ref="textDataManager" interface="org.codice.data.management.DataManager">
        <service-properties>
            <entry key="name" value="textDataManager"/>
        </service-properties>
    </service>

</blueprint>